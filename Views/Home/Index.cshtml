@{
	ViewData["Title"] = "Emplyee list";
}
@section Scripts{
	<script src="~/lib/mustache.min..js"></script>
	<script src="~/lib/jquery.twbspagination.min.js"></script>
	<script src="~/js/controller/homecontroller.js"></script>
}
<div class="row">
	<div class="col-md-10">
		<div class="row">
			<div class="col-md-5">
				<input type="text" class="form-control" placeholder="Typing Name" aria-label="Name" id="txtNameSearch">
			</div>
			<div class="col-md-3 align-self-center">
				<select class="form-select" aria-label="Acitve" id="ddlStatusSearch">
					<option selected value="">All</option>
					<option value="true">Active</option>
					<option value="false">Lock</option>
					
				</select>
			</div>
			<div class="col-md-4">
				<button id="btnSearch" class="btn btn-primary" >Search</button>
				<button id="btnReset" class="btn btn-success">Reset</button>
			</div>
		</div>
	</div>
	<div class="col-md-2 text-end">
		<button id="btnAddNew" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modelAddUpdate">Add New</button>
	</div>
</div>
<div class="row">
	<table class="table">
		<thead>
			<tr>
				<td>ID</td>
				<td>Name</td>
				<td>Salary</td>
				<td>Status</td>
				<td>#</td>
			</tr>
		</thead>
		<tbody id="tblData">
		</tbody>
	</table>
	<div id="pagination" class="pagination"></div>
	
	<script id="data-template" type="x-tmpl-mustache">
		<tr>
		<td>{{ID}}</td>
		<td>{{Name}}</td>
		<td><input type="number" class="txtSalary" data-id="{{ID}}" value="{{Salary}}" /></td>
		<td>{{{Status}}}</td>
		<td><button class="btn btn-success btnEdit" data-id="{{ID}}"><i class="fa fa-pencil" aria-hidden="true"></i></button> <button class="btn btn-danger btnDelete" data-id="{{ID}}"><i class="fa fa-trash" aria-hidden="true"></i></button></td>
		</tr>
	</script>
</div>
<!-- Modal -->
<div class="modal fade" id="modelAddUpdate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="exampleModalLabel">Add/Update</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form>
					<div class="mb-3">
						<label for="txtName" class="form-label">Name:</label>
						<input class="form-control" type="text" id="txtName">
						<input class="form-control" type="hidden" id="hdId" value="0">
					</div>
					<div class="mb-3">
						<label for="txtSalary" class="form-label">Salary:</label>
						<input class="form-control" type="number" id="txtSalary">
					</div>
					<div class="form-check">
						<input class="form-check-input" type="checkbox" value="" id="ckStatus" >
						<label class="form-check-label" for="ckStatus">
							Active
						</label>
					</div>
					
				</form>
			</div>
			<div class="modal-footer">
				<button type="submit" id="btnSave" class="btn btn-primary">Save changes</button>
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
			</div>
		</div>
	</div>
</div>